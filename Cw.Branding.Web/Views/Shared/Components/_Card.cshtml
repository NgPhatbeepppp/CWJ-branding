@model Cw.Branding.Web.Models.Components.CardItemViewModel

<div class="group relative w-full max-w-[400px] mx-auto mb-12">

    <a href="@Model.LinkUrl" class="block w-full h-52 overflow-hidden rounded-sm shadow-md relative z-0">
        <img src="@Model.ImageUrl"
             alt="@Model.Title"
             class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out">
    </a>

    <div class="relative z-10 -mt-12 w-[85%] ml-auto mr-2 bg-white rounded-sm shadow-xl border border-gray-200 p-5 transition-transform duration-300 group-hover:-translate-y-1">

        <div class="flex justify-between items-center mb-2">
            @if (!string.IsNullOrEmpty(Model.Category))
            {
                <span class="text-[10px] font-bold uppercase tracking-wider text-blue-700">
                    @Model.Category
                </span>
            }
            @if (!string.IsNullOrEmpty(Model.Date))
            {
                <span class="text-[10px] text-gray-400">@Model.Date</span>
            }
        </div>

        <h3 class="text-base font-bold text-gray-900 mb-2 leading-tight font-heading line-clamp-2 group-hover:text-blue-700 transition-colors">
            <a href="@Model.LinkUrl">@Model.Title</a>
        </h3>

        <p class="text-gray-600 text-sm leading-relaxed mb-3 line-clamp-2">
            @Model.Description
        </p>

        <div class="pt-1 border-t border-gray-100 mt-2">
            <a href="@Model.LinkUrl" class="inline-flex items-center text-[11px] font-bold text-blue-700 hover:text-blue-900 uppercase tracking-wide mt-2">
                @Model.LinkText
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
        </div>
    </div>
</div>
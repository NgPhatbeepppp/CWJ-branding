<!DOCTYPE html>
<html lang="@ViewBag.Lang ?? " en"">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CW Branding</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="page">
    <header class="site-header">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" asp-route-lang="@ViewBag.Lang">CW Branding</a>

            <nav class="main-nav">
                <a asp-controller="Home" asp-action="Index" asp-route-lang="@ViewBag.Lang">Home</a>
                <a asp-controller="Products" asp-action="Index" asp-route-lang="@ViewBag.Lang">Products</a>
                <a asp-controller="News" asp-action="Index" asp-route-lang="@ViewBag.Lang">News</a>
                <a asp-controller="Contact" asp-action="Index" asp-route-lang="@ViewBag.Lang">Contact</a>
            </nav>

            <div class="lang-switcher">
                <a asp-route-lang="vi">VI</a> |
                <a asp-route-lang="en">EN</a>
            </div>
        </div>
    </header>

    <main class="site-main container">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - CW Branding</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>

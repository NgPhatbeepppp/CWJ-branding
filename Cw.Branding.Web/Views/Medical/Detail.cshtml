@model Cw.Branding.Web.Models.Entities.Product
@{
    var lang = Context.GetRouteValue("lang")?.ToString() ?? "en";
    var isEn = lang == "en";

    var name = isEn ? Model.NameEn : Model.NameVi;
    // Ưu tiên Description (HTML), nếu null thì fallback về ShortDescription, rồi mới đến text tĩnh
    var dbDescription = isEn ? Model.DescriptionEn : Model.DescriptionVi;
    var shortDesc = isEn ? Model.ShortDescriptionEn : Model.ShortDescriptionVi;

    var content = !string.IsNullOrEmpty(dbDescription) ? dbDescription : shortDesc;

    // Nếu cả 2 đều null (trường hợp hiếm), hiện thông báo placeholder để user biết
    if (string.IsNullOrEmpty(content))
    {
        content = "<p class='text-slate-400 italic'>Content is being updated...</p>";
    }

    var mainImage = Model.Images?.OrderBy(i => i.DisplayOrder).FirstOrDefault()?.FilePath
                    ?? "https://via.placeholder.com/500x500?text=No+Image";

    ViewData["Title"] = name;
}

<div class="relative h-[200px] w-full overflow-hidden bg-slate-900">
    <img src="/images/medical-bg-4.jpg" alt="Banner" class="h-full w-full object-cover opacity-60" />
    <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="font-heading text-3xl font-bold uppercase tracking-widest text-white md:text-4xl drop-shadow-md">
            @Model.Category.NameEn
        </h1>
    </div>
</div>

<div class="border-b border-slate-200 bg-white">
    <div class="section-container py-3">
        <nav class="flex text-sm text-slate-500" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/@lang" class="hover:text-brand-primary">Home</a>
                </li>
                <li>/</li>
                <li class="inline-flex items-center">
                    <a href="/@lang/medical-solutions" class="hover:text-brand-primary">Medical</a>
                </li>
                <li>/</li>
                <li>
                    <span class="text-slate-700">@Model.Category.NameEn</span>
                </li>
                <li>/</li>
                <li aria-current="page">
                    <span class="font-medium text-brand-primary line-clamp-1 max-w-[200px]">@name</span>
                </li>
            </ol>
        </nav>
    </div>
</div>

<div class="section-container py-12 md:py-16">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-12">

        <div class="lg:col-span-5 flex flex-col gap-16">
            <div class="rounded-lg bg-white p-4 ">
                <img src="@mainImage" alt="@name" class="h-auto w-full object-contain" />
            </div>

            <div class="bg-blue-100/60 p-6 rounded-sm border-l-4 border-brand-primary">
                <h3 class="mb-4 font-heading text-lg font-bold uppercase text-brand-primary">
                    TECHNICAL INFORMATION
                </h3>
                <div class="font-body text-sm text-slate-700 space-y-2">
                    @if (!string.IsNullOrEmpty(shortDesc))
                    {
                        <p>@shortDesc</p>
                    }
                    else
                    {
                        <p>Contact us for detailed technical specifications.</p>
                    }
                </div>
            </div>
        </div>

        <div class="lg:col-span-7 lg:border-l lg:border-slate-200 lg:pl-20">

            <div class="mb-2 text-right">
                <span class="font-heading text-xl font-bold text-slate-900">Masimo</span>
            </div>

            <div class="mb-6 text-right border-b border-slate-200 pb-6">
                <h1 class="font-heading text-4xl font-extrabold uppercase text-slate-900 lg:text-5xl leading-tight">
                    @name
                </h1>
                <p class="mt-2 text-lg text-slate-500 font-light">
                    Patient Monitoring and Connectivity Platform
                </p>
            </div>

            <h2 class="mb-4 font-heading text-lg font-bold uppercase text-brand-primary">
                PRODUCT INFORMATION
            </h2>

            <div class="prose prose-slate max-w-none font-body text-slate-600 leading-relaxed mb-8">
                @Html.Raw(content)
            </div>

            <div class="mt-8">
                <a href="#" class="inline-flex items-center justify-center bg-brand-primary px-8 py-3 text-base font-bold text-white shadow-md transition-all hover:bg-blue-700 hover:shadow-lg rounded-sm uppercase tracking-wide w-full sm:w-auto">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.5l5 5v2m0 0h2a2 2 0 012 2v6a2 2 0 01-2 2h-2.5"></path></svg>
                    Download PDF
                </a>
            </div>
        </div>
    </div>
</div>
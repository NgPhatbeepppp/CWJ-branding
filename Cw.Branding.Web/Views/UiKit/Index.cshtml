@{
    ViewData["Title"] = "UI Kit & Components Demo";
}

<div class="bg-gray-50 min-h-screen py-12">
    <div class="container mx-auto px-4 max-w-6xl">
        
        <div class="text-center mb-16">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">CW Design System</h1>
            <p class="text-gray-500">Core components & style guide for Charles Wembley</p>
        </div>

        <section class="bg-white rounded-xl shadow-sm p-8 mb-10">
            <h2 class="text-2xl font-bold border-b pb-4 mb-6">1. Colors & Buttons</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <h3 class="font-semibold text-gray-700 mb-4">Buttons</h3>
                    <div class="flex flex-wrap gap-4">
                        <button class="btn btn-primary">Primary Button</button>
                        <button class="btn btn-secondary">Secondary</button>
                        <button class="btn btn-ghost">Ghost Link</button>
                    </div>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-700 mb-4">States</h3>
                    <div class="flex flex-wrap gap-4">
                        <button class="btn btn-primary opacity-50 cursor-not-allowed">Disabled</button>
                        <button class="btn btn-primary ring-2 ring-blue-300">Focus Ring</button>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-white rounded-xl shadow-sm p-8 mb-10">
            <h2 class="text-2xl font-bold border-b pb-4 mb-6">2. Section Headers</h2>
            
            <div class="space-y-12">
                <div>
                    <partial name="Components/_SectionHeader" 
                             model='new Cw.Branding.Web.Models.Components.SectionHeaderViewModel { 
                                Title = "Medical Solutions", 
                                Subtitle = "Leading the way in healthcare innovation with premium equipment.", 
                                Alignment = "text-center" 
                             }' />
                </div>

                <div class="bg-gray-100 p-6 rounded-lg">
                    <partial name="Components/_SectionHeader" 
                             model='new Cw.Branding.Web.Models.Components.SectionHeaderViewModel { 
                                Title = "About Charles Wembley", 
                                Subtitle = "Trusted partner since 1989.", 
                                Alignment = "text-left" 
                             }' />
                </div>
            </div>
        </section>

        <section class="bg-white rounded-xl shadow-sm p-8 mb-10">
            <h2 class="text-2xl font-bold border-b pb-4 mb-6">3. Cards (Grid Layout)</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <partial name="Components/_Card" 
                         model='new Cw.Branding.Web.Models.Components.CardItemViewModel { 
                            Title = "Ultrasound System X500", 
                            Category = "Medical",
                            Description = "High-performance ultrasound system designed for cardiology and radiology applications.", 
                            LinkUrl = "#" 
                         }' />

                <partial name="Components/_Card" 
                         model='new Cw.Branding.Web.Models.Components.CardItemViewModel { 
                            Title = "Sustainable Packaging", 
                            Category = "F&B",
                            Description = "Eco-friendly packaging solutions for the modern food industry.", 
                            LinkUrl = "#" 
                         }' />

                <partial name="Components/_Card" 
                         model='new Cw.Branding.Web.Models.Components.CardItemViewModel { 
                            Title = "Q3 2025 Financial Report", 
                            Category = "News",
                            Date = "Nov 20, 2025",
                            Description = "Charles Wembley announces strong growth in the medical sector...", 
                            LinkText = "Read Article"
                         }' />
            </div>
        </section>

        <section class="bg-white rounded-xl shadow-sm p-8 mb-10">
            <h2 class="text-2xl font-bold border-b pb-4 mb-6">4. Form Controls</h2>
            
            <form class="max-w-2xl">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="form-group">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" placeholder="Nguyen Van A">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-control" placeholder="name@company.com">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Department</label>
                    <select class="form-control">
                        <option>Medical Sales</option>
                        <option>F&B Solutions</option>
                        <option>Customer Support</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Message</label>
                    <textarea class="form-control" rows="4" placeholder="How can we help you?"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </section>

    </div>
</div>
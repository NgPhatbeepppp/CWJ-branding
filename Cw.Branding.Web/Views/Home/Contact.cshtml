@{
    ViewData["Title"] = "Contact Us";
    // KHÔNG set IsTransparentHeader -> Mặc định là False (Nền trắng)
}

<div class="bg-gray-50 min-h-screen py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="grid grid-cols-1 md:grid-cols-2">
                <div class="p-8 md:p-12 bg-blue-900 text-white">
                    <h1 class="text-3xl font-heading font-bold mb-4">Get in touch</h1>
                    <p class="text-blue-100 mb-8">We are here to help. Chat to our friendly team.</p>

                    <div class="space-y-4">
                        <p>📍 123 Nguyen Van Linh, Dist 7, HCMC</p>
                        <p>📞 +84 28 1234 5678</p>
                        <p>✉️ contact@charleswembley.com</p>
                    </div>
                </div>

                <div class="p-8 md:p-12">
                    <form>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                            <input type="text" class="w-full border-gray-300 rounded-md border p-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Your name">
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <input type="email" class="w-full border-gray-300 rounded-md border p-2 focus:ring-blue-500 focus:border-blue-500" placeholder="you@company.com">
                        </div>
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                            <textarea rows="4" class="w-full border-gray-300 rounded-md border p-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                        </div>
                        <button type="button" class="w-full bg-blue-900 text-white py-2 px-4 rounded-md hover:bg-blue-800 transition">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
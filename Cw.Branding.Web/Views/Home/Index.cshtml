@* --- CSS & JS Riêng cho phần này (Inject vào cuối trang) --- *@
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var swiper = new Swiper(".partner-swiper", {
                slidesPerView: 2,      // Mobile hiện 2 logo
                spaceBetween: 30,      // Khoảng cách giữa các logo
                loop: true,            // Lặp vô tận
                speed: 5000,           // Tốc độ trôi (càng cao càng chậm)
                freeMode: true,        // Chế độ trôi tự do
                allowTouchMove: true,  // Cho phép kéo thả
                autoplay: {
                    delay: 0,          // Không có độ trễ, chạy liên tục
                    disableOnInteraction: false, // Tương tác xong vẫn chạy tiếp
                    pauseOnMouseEnter: true, // (Tùy chọn) Chuột vào thì dừng trôi để xem kỹ
                },
                breakpoints: {
                    640: { slidesPerView: 3, spaceBetween: 40 },
                    768: { slidesPerView: 4, spaceBetween: 50 },
                    1024: { slidesPerView: 5, spaceBetween: 60 },
                }
            });
        });
    </script>

    @* Style override để animation trôi đều (linear) thay vì ease-in-out *@
    <style>
        .swiper-wrapper {
            transition-timing-function: linear;
        }
    </style>
}



@model Cw.Branding.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = Model.MetaTitle ?? "Home Page";
    ViewData["MetaDescription"] = Model.MetaDescription;
}

@* --- 1. HERO BANNER SECTION (Giao diện Mới) --- *@
<section class="relative w-full h-screen min-h-[700px] flex items-center overflow-hidden">

    @* 1. Background Image *@
    <div class="absolute inset-0 z-0">
        <img src="~/images/Hero illstration.png"
             alt="Charles Wembley Medical Solutions"
             class="w-full h-full object-cover" />

        @* 2. Overlay: Màu trắng mờ 20% (Giúp ảnh sáng sủa, giảm độ tối) *@
        <div class="absolute inset-0 bg-white/20"></div>
    </div>

    @* 3. Content Container *@
    <div class="relative z-10 w-[92%] max-w-[1800px] mx-auto h-full flex flex-col justify-center pt-32 px-4 md:pl-32 md:pr-6">
        <div class="max-w-5xl text-center md:text-left">

            @* Main Headline *@
            <h1 class="font-heading font-bold text-slate-900 uppercase
                       text-4xl md:text-5xl lg:text-[60px]
                       leading-tight lg:leading-[70px]
                       tracking-[0.05em]
                       drop-shadow-sm mb-2">
                Trusted Medical  <br />
                Solutions For Modern
            </h1>


            @* Highlight Text *@
            <h1 class="font-heading font-extrabold text-[#004F9F] uppercase
                       text-4xl md:text-5xl lg:text-[60px]
                       leading-tight lg:leading-[70px]
                       tracking-[0.05em]">
                Healthcare
            </h1>

            @* Sub-headline (Optional - lấy từ Model nếu có, hoặc text tĩnh) *@
           
            
                <p class="font-body text-lg md:text-xl text-slate-800 mt-6 mb-10 max-w-2xl leading-relaxed font-medium">
                Providing innovative and efficient solutions tailored to contemporary
                medical needs.
                </p>
            

            @* CTA Buttons *@
            <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start mt-8">
                @* Primary Button: Rounded Full *@
                <a href="/medical-solutions"
                   class="btn-primary rounded-md px-8 py-3 text-lg shadow-lg hover:shadow-xl transition-all duration-300 inline-flex items-center justify-center">
                    Explore Solutions
                </a>

                @* Secondary Button (Nếu cần) *@
                <a href="/contact"
                   class="inline-flex items-center justify-center px-8 py-3 rounded-md border-2 border-[#004F9F] text-[#004F9F] font-bold hover:bg-[#004F9F] hover:text-white transition-all duration-300">
                    Contact Us
                </a>
            </div>

        </div>
    </div>
</section>

@* --- 2. ABOUT US SECTION  --- *@
<section class="relative w-full py-6 md:py-8 bg-center bg-no-repeat"
         style="background-image: url('/images/WebBR_1.png'); background-size: 100% 100%;">
         
             <div class="container mx-auto px-4 relative z-10">
        @* Giảm min-height xuống 300px, giảm gap để nội dung gần nhau hơn *@
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center min-h-[500px]">

            @* Cột Trái: Tên thương hiệu (Nằm cao - Left Top) *@
            <div class="flex flex-col text-slate-900 text-center md:text-left self-start pt-4">
                @* Font Monsieur La Doulaise *@
                <h2 class="font-signature text-6xl md:text-8xl mb-2 text-slate-900 text-blue-600">
                    Charles Wembley
                </h2>
                @* Font Libre Caslon Text *@
                <h3 class="font-classic font-medium text-xl md:text-2xl tracking-wide uppercase border-b-2 border-slate-900 pb-4 inline-block md:self-start">
                    Healthcare & Culinary Innovation
                </h3>
            </div>

            @* Cột Phải: Nội dung & Button (Nằm thấp hơn - Right Bottom) *@
            <div class="flex flex-col justify-end items-center md:items-start md:pt-24 text-slate-800 text-center md:text-left">
                @* Tăng font-size lên text-xl hoặc 2xl, font Montaga *@
                <p class="font-narrative text-xl md:text-2xl leading-relaxed mb-8 font-medium">
                    Charles Wembley is a global leader in cutting-edge medical solutions and premium food & beverage (F&B) systems. The company is dedicated to advancing healthcare with state-of-the-art technology, while enriching culinary experiences worldwide through innovative F&B offerings.
                </p>

                @* Nút không nền (Transparent) *@
                <a href="/about-us"
                   class="group inline-flex items-center gap-2 font-heading text-lg font-bold tracking-[0.05em] uppercase py-3 text-[#004F9F] hover:text-blue-800 transition-all duration-300">
                    About Us
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                         class="w-7 h-5 transition-transform duration-300 group-hover:translate-x-3">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                </a>
            </div>

        </div>
    </div>
</section>


@* Có thể tách ra file CSS/JS riêng, nhưng để test nhanh mình để inline *@
<style>
    /* Class kích hoạt trạng thái hiển thị + Zoom */
    .slide.active {
        opacity: 1;
        transform: scale(1.1); /* Zoom nhẹ lên 110% */
        transition-duration: 6000ms; /* Thời gian zoom khớp với thời gian chuyển slide */
    }
    /* Khi ẩn đi thì reset scale về 1 để lần sau zoom lại từ đầu */
    .slide:not(.active) {
        transform: scale(1.0);
        transition-duration: 3000ms; /* Thời gian fade out */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const slides = document.querySelectorAll('#ken-burns-slider .slide');
        let currentSlide = 0;
        const slideInterval = 6000; // 6 giây đổi ảnh 1 lần

        // Khởi tạo slide đầu tiên
        if(slides.length > 0) {
            slides[0].classList.add('active');
        }

        setInterval(() => {
            // Xóa class active ở slide hiện tại
            slides[currentSlide].classList.remove('active');

            // Chuyển sang slide tiếp theo (vòng tròn)
            currentSlide = (currentSlide + 1) % slides.length;

            // Thêm class active cho slide mới
            slides[currentSlide].classList.add('active');
        }, slideInterval);
    });
</script>






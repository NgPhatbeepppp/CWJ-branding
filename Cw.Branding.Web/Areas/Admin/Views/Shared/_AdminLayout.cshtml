<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin - CW Branding</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin">
    <header class="admin-header">
        <div class="container">
            <h1>Admin Panel</h1>
            <nav>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a>
                <a asp-area="Admin" asp-controller="News" asp-action="Index">News</a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
            </nav>
        </div>
    </header>

    <main class="admin-main container">
        @RenderBody()
    </main>
</body>
</html>
